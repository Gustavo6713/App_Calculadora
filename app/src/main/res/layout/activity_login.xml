<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:id="@+id/rel_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/paytone_one"
            android:text="Health\nCalc"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:gravity="end"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/peso_imc"
            android:layout_alignParentEnd="true"/>


    </RelativeLayout>

    <View
        android:id="@+id/view_wave"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/ic_wave"
        android:layout_below="@+id/rel_head"/>

    <TextView
        android:id="@+id/tv_mensagem_erro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/holo_red_light"
        android:layout_below="@id/view_wave"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/ed_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_mensagem_erro"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edit_text_login_background"
        android:padding="16dp"
        android:hint="E-mail"
        android:drawableStart="@drawable/ic_email_24"
        android:drawableTint="@color/colorAccent"
        android:drawablePadding="16dp"/>

    <EditText
        android:id="@+id/ed_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_user"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:inputType="textPassword"
        android:background="@drawable/edit_text_login_background"
        android:padding="16dp"
        android:hint="Senha"
        android:drawableStart="@drawable/ic_lock_24"
        android:drawableTint="@color/colorAccent"
        android:drawablePadding="16dp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:text="Entrar"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:layout_below="@+id/ed_senha"
        android:background="@drawable/button_background"
        android:padding="16dp" />

    <CheckBox
        android:id="@+id/check_lembrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lembrar"
        android:layout_below="@+id/btn_login"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_esqueceu_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esqueceu a senha?"
        android:layout_below="@+id/check_lembrar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/tv_novo_aqui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Novo por aqui?"
        android:layout_below="@id/tv_esqueceu_senha"
        android:layout_marginTop="24dp"
        android:layout_toStartOf="@+id/tv_cria_sua_conta"/>

    <TextView
        android:id="@+id/tv_cria_sua_conta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crie sua conta"
        android:layout_below="@id/tv_esqueceu_senha"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/holo_blue_dark"/>

    <TextView
        android:id="@+id/tv_rodape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desenvolvido por DS2M-A"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"/>

    </RelativeLayout>
